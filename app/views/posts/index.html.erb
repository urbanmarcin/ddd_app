<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title_with_length %></td>
        <td><%= post.description %></td>
        <td><%= link_to "Show", post_path(post) %></td>
        <td><%= link_to "Approve", "/approvals/new?post_id=#{post.id}" %></td>
        <td><%= link_to "Edit", edit_post_path(post) %></td>
        <td><%= link_to "Publish", "/posts/#{post.uid}/publish_post", method: :post %></td>
        <td><%= link_to "Destroy", "/posts/#{post.uid}", method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New post", new_post_path %>
